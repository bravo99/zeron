<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2" >

    <TextView
        android:id="@+id/tvr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/br2"
        android:layout_marginTop="22dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvr1"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvr3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvr2"
        android:layout_marginTop="28dp"
        android:text="TextView" />

    <Button
        android:id="@+id/br1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/br2"
        android:text="@string/botonborrar" />

    <Button
        android:id="@+id/br2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/br1"
        android:layout_alignBottom="@+id/br1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:text="@string/botonmodificar" />

</RelativeLayout>
