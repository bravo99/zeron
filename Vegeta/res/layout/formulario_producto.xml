<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_container"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    
    <TextView
        android:id="@+id/tv_titulo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="tv_dialogTituloLocal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/dialog_divider"
        android:layout_below="@id/tv_titulo" />
    
    <TextView 
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_nombreLocal"
        android:layout_below="@id/divider"/>

    
    <EditText 
        android:id="@+id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@id/tv_nombre"
	    android:layout_marginBottom="10dp">
        
        <requestFocus />
	</EditText>
	
    <TextView 
        android:id="@+id/tv_descripcion"
        android:layout_below="@id/et_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv_descripcionLocal"/>
    <EditText 
        android:id="@+id/et_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@id/tv_descripcion"
        android:layout_marginBottom="10dp"/>
    
	<TextView 
	    android:id="@+id/tv_producto"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/et_descripcion"
	    android:text="agregar_producto"/>

    <ListView
        android:id="@+id/lv_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_producto" >
    </ListView>
    
    <ImageButton 
        android:id="@+id/ib_agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:layout_below="@id/lv_producto"
        android:layout_alignParentRight="true"/>
    
    <LinearLayout 
        android:id="@+id/ll_camara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ib_agregar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp">
        
	    <ImageButton 
	        android:id="@+id/ib_camara"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/camara"
	        android:contentDescription="Hola"/>
	    <TextView 
	        android:id="@+id/tv_camara"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="tv_camara"
	        android:layout_gravity="center_vertical"/>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal"
        android:layout_below="@id/ll_camara">

        <Button
            android:id="@+id/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector"
            android:text="aceptar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector"
            android:text="cancelar"
            android:textColor="@android:color/white" />
    </LinearLayout>
    
</RelativeLayout>