<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cantidadIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/medidaIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cantidadIng"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/cantidadIng"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/nombreIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/medidaIng"
        android:layout_alignBottom="@+id/medidaIng"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/medidaIng"
        android:text="Ingrediente"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
