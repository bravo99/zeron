<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_container"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">  
          
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/tv_agregarMarcador"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/vegLetra"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    
    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/vegLetraEsp" />
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10sp">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_restaurant"
                android:textColor="@color/vegLetraEsp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
            
            <ImageButton 
				android:id="@+id/pin_restaurant"
				android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:contentDescription="@string/content_restaurant"
        		android:padding="5dp"
        		android:background="@android:color/transparent"
        		android:src="@drawable/restaurant"
                android:layout_gravity="center_horizontal" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_local"
                android:textColor="@color/vegLetraEsp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/pin_carrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:contentDescription="@string/content_local"
                android:padding="5dp"
                android:src="@drawable/local"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>
    
        <Button
            android:id="@+id/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ver"
            android:text="@string/cancelar"
            android:textColor="@color/vegLetra"
            android:layout_gravity="right" />

</LinearLayout>