<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_container" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nomIngred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/vegLetra"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true" />
        
        <LinearLayout
            android:id="@+id/id_medida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomIngred"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medida: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/vegLetra"
            android:layout_weight="1"
            />

        <Spinner
            android:id="@+id/spMedida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
        
     <LinearLayout
         android:id="@+id/id_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_medida"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/vegLetra"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:layout_weight="1" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    
     <Button
            android:id="@+id/aceptar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:background="@drawable/button_ver"
            android:text="Listo"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/vegLetra"
            android:layout_below="@id/id_cantidad" />
    
     

    </RelativeLayout>



</LinearLayout>
