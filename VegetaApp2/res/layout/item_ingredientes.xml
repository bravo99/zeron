<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/cantidadIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/vegLetra"
        android:text="Cantidad"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:textSize="15sp" />
    <TextView 
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/medidaIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/vegLetra"
        android:layout_toRightOf="@id/cantidadIng"
        android:text="Medida"
        android:layout_marginRight="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nombreIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrediente"
        android:layout_centerVertical="true"
        android:textColor="@color/vegLetra"
        android:layout_toRightOf="@id/medidaIng"
        android:textSize="15sp" />

</RelativeLayout>
	

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#808080" />


</LinearLayout>